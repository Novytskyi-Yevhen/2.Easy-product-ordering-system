        <div class="btn-group-vertical" role="group">
            <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked>
            <label class="btn btn-outline-primary" for="btnradio1">@nowDate.Date.ToString("MM/dd/yyyy")</label>

            <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
            <label class="btn btn-outline-primary" for="btnradio2">@nowDate.AddDays(1.0).Date.ToString("MM/dd/yyyy")</label>

            
            <label class="btn btn-outline-primary" for="btnradio3">@nowDate.AddDays(2.0).Date.ToString("MM/dd/yyyy")</label>

            @*@foreach (var item in date) {
